<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brightLayout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/menu_title_bg" >

        <TextView
            android:id="@+id/brightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="LCD Brightness Control"
            android:textSize="40sp" />

        <Button
            android:id="@+id/brightStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dp"
            android:background="@drawable/button_close"
            android:textSize="25sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/brightNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:layout_alignParentRight="true"
  		android:layout_marginRight="100dp"
        android:background="@drawable/button_style"
        android:text="Next"
        android:textSize="40sp" />

    <Button
        android:id="@+id/brightFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/button_style"
        android:text="Fail"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/brightNext"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:text="5/14"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/brightMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/button_minus" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/menu_preperence_brightness_auto_slide_bg" />

    <SeekBar
        android:id="@+id/brightSeekbar"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="255dp"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/seekbar_thumb" />

    <Button
        android:id="@+id/brightPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="685dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/button_plus" />

        <TextView
            android:id="@+id/brightStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginTop="15dp"
            android:text=""
            android:textSize="40sp" />
    
    <Button
        android:id="@+id/brightOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="150dp"
        android:text="1"
        android:textSize="40sp" 
        android:background="@drawable/menu_numpad_small_gray" />
    <Button
        android:id="@+id/brightTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="150dp"
        android:text="2"
        android:textSize="40sp" 
        android:background="@drawable/menu_numpad_small_gray" />
    <Button
        android:id="@+id/brightThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="213dp"
        android:layout_marginTop="150dp"
        android:text="3"      
        android:textSize="40sp" 
        android:background="@drawable/menu_numpad_small_gray" />
    <Button
        android:id="@+id/brightFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="313dp"
        android:layout_marginTop="150dp"
        android:text="4"      
        android:textSize="40sp" 
        android:background="@drawable/menu_numpad_small_gray" />
    <Button
        android:id="@+id/brightFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="413dp"
        android:layout_marginTop="150dp"
	    android:text="5"      
        android:textSize="40sp" 
        android:background="@drawable/menu_numpad_small_gray" />
    <Button
        android:id="@+id/brightSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="513dp"
        android:layout_marginTop="150dp"
  	    android:text="6"      
        android:textSize="40sp" 
        android:background="@drawable/menu_numpad_small_gray" />
    <Button
        android:id="@+id/brightSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="613dp"
        android:layout_marginTop="150dp"
   	    android:text="7"      
        android:textSize="40sp" 
        android:background="@drawable/menu_numpad_small_gray" />
    <Button
        android:id="@+id/brightEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="713dp"
        android:layout_marginTop="150dp"
   	    android:text="8"      
        android:textSize="40sp" 
        android:background="@drawable/menu_numpad_small_gray" />
</RelativeLayout>
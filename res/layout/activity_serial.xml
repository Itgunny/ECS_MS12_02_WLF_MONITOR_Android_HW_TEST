<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/serialLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/menu_title_bg" >

        <TextView
            android:id="@+id/serialText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Serial Flash Test"
            android:textSize="40sp" />

        <Button
            android:id="@+id/serialStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dp"
            android:layout_alignTop="@+id/serialText"
            android:background="@drawable/button_close"
            android:textSize="25sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/serialSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/button_style"
        android:text="Send"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/serialDesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Please click on the send button\nto send the value to the Serial Flash."
        android:textSize="40sp" />
    
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/serialSend"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:text="6/14"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>